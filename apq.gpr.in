project APQ is

	version := $version;
	
	
	type Supported_OS is ("Windows_NT", "GNU/Linux", "Darwin" );
	
	target: Supported_OS := external("OS", "GNU/Linux");
	
	
	
	for Source_Dirs use ( "src" );
	for Object_Dir use "obj";
	
	-- LIBRARY
	for Library_Dir use "lib";
	for Library_Name use "apq";
	case target is
		when "Windows_NT" =>
			for Library_Kind use "dynamic";
		
		when "GNU/Linux" =>
			for Library_Kind use "dynamic";
		when "Darwin" =>
			for Library_Kind use "static";
	end case;
	for Library_Version use "libapq.so." & Version;
	
	
	package Compiler is
		for Default_Switches ("ada") use ("-O2", "-gnat05");
	end Compiler;

end APQ;

